<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TouchGame.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Icon Fonts -->
            <x:String x:Key="IonicIcons">IonicIcons</x:String>

            <!-- Text Fonts -->
            <x:String x:Key="BlackFontFamily">LatoBlack</x:String>
            <x:String x:Key="BoldFontFamily">LatoBold</x:String>
            <x:String x:Key="RegularFontFamily">LatoRegular</x:String>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

